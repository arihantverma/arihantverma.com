---
layout: layouts/base.njk
templateClass: tmpl-post
---

<section class="post__container font-family-system font-family-garamond">
  <h1 class="post__heading font-family-system font-family-override-impact font-family-helvetica d-font-family-impact color-dark-gray">{{ title }}</h1>

  <section class="post__content font-size-xlarge">
    {% include "./_dates.njk" %}

    <article>
      {{ content | safe }}

      {% if not dontShowShare%}
        {% twitterShareLink title, metadata.siteUrl + page.url, twitterRelated, twitterHashtags, twitterHandlesForText %}
      {% endif %}



      <div style="border: 2px solid var(--oceanblue); margin: 20px 0; padding: 1rem;">
        {% if newsletter %}
          <h2>If you enjoyed this essay please considering subscribing to my newsletter</h2>
        {% endif %}

        {% if newsletter === 'lit' %}
          {% newsletter "lit"%}
        {% endif %}


        {% if newsletter === 'tech' %}
          {% newsletter "tech"%}
        {% endif %}

      </div>

    </article>
  </section>

  {% if not dontShowReadMore %}
    <section class="post__read-more--container">
      {% include "./_prevnext.njk" %}
    </section>
  {% endif %}

  {% footnotes %}
<section>


